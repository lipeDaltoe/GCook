@model GCook.Models.Receita

@{
    ViewData["Title"] = "Receitas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
                </div>
            </div>
            <div class="col mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="TempoPreparo" class="control-label" rows="10"></label>
                    <input asp-for="TempoPreparo" class="form-control" />
                    <span asp-validation-for="TempoPreparo" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Rendimento" class="control-label"></label>
                    <input asp-for="Rendimento" class="form-control" />
                    <span asp-validation-for="Rendimento" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Dificuldade" class="control-label"></label>
                    <select asp-for="Dificuldade" class="form-select"
                        asp-items="Html.GetEnumSelectList<Dificuldade>()"></select>
                    <span asp-validation-for="Dificuldade" class="text-danger"></span>
                </div>
            </div>
            <div class="col mb-3">
                <label asp-for="Preparo" class="control-label"></label>
                <textarea asp-for="Preparo" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Preparo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Foto" class="control-label"></label>
                <img id='Preview'>
                <input name="Foto" type="file" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
            </div>
            <div class="my-3">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script>
        window.addEventListener('load', function () {
            document.querySelector('input[type=file]')
                .addEventListener('change', function () {
                    if (this.files && this.files[0]) {
                        var img = document.getElementById('Preview');
                        img.src = URL.createObjectURL(this.files[0]);
                    }
                })
        })
    </script>
}